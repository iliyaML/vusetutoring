{{#each errors}}
<div class="alert alert-danger">{{ text }}</div>
{{/each}}
<div class="card card-body">
    <h3>Add Tutor</h3>
    <form action="/tutors/add" method="post">
        <div class="form-group">
            <label for="vunetId">VunetID</label>
            <input type="text" class="form-control" name="vunetId" value="{{ newTutor.vunetId }}" required>
        </div>
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" name="firstName" value="{{ newTutor.firstName }}" required>
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" name="lastName" value="{{ newTutor.lastName }}" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" value="{{ newTutor.email }}" required>
        </div>
        <div class="form-group">
            <label for="uniqueCode">Unique Code</label>
            <input type="password" class="form-control" name="uniqueCode" value="{{ newTutor.uniqueCode }}" required>
        </div>
        <button type="submit" class="btn btn-success btn-block">Submit</button>
    </form>
</div>